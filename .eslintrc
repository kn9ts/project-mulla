{
    "env": {
        "node": true,
        "mocha": true
    },
    "extends": "airbnb",
    "rules": {
        "prefer-template": 0,
        "prefer-rest-params": 0,
        "strict": 0,
        "no-unused-expressions": 0,
        "no-param-reassign": 0,
        "max-len": [
            2,
            100,
            2,
            {
                "ignoreComments": true,
                "ignoreUrls": true,
                "ignorePattern": "\/(.*)\/;"
            }
        ]
    }
}
